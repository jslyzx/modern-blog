# Copy this file to .env.local and adjust the values for your environment
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-generated-secret
PREVIEW_TOKEN_SECRET=your-preview-secret
SITE_BASE_URL=http://localhost:3000
BLOG_DB_HOST=127.0.0.1
BLOG_DB_PORT=3306
BLOG_DB_USER=root
BLOG_DB_PASSWORD=your-db-password
BLOG_DB_NAME=modern_blog
BLOG_DB_SSL=false
DB_CONNECTION_LIMIT=10
BCRYPT_SALT_ROUNDS=12

# Optional overrides for the seed:admin script
ADMIN_USERNAME=admin
ADMIN_PASSWORD=123456
ADMIN_EMAIL=

# Optional metadata overrides used in SEO and feeds
NEXT_PUBLIC_SITE_NAME=Modern Blog
NEXT_PUBLIC_SITE_DESCRIPTION=Insights and stories from Modern Blog.

# Convenience when using docker-compose locally
MYSQL_ROOT_PASSWORD=root
